{
  "name": "fahm-server",
  "version": "0.1.0",
  "description": "FAHM mobile app REST API (Node.js, Express, MongoDB via Mongoose)",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint .",
    "test": "jest --coverage",
    "coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "seed:menus": "node scripts/seedMenus.js",
    "seed:cms": "node scripts/seedCms.js",
    "add-user": "node scripts/addUser.js",
    "seed:capabilities": "node scripts/seedCapabilities.js",
    "seed:roles": "node scripts/seedRoles.js",
    "seed:users": "node scripts/seedUsers.js"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "rest",
    "fahm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/storage-blob": "^12.29.1",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.2",
    "mongoose": "^8.7.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-azure-blob-storage": "^1.2.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.10.7"
  },
  "devDependencies": {
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.1"
  }
}