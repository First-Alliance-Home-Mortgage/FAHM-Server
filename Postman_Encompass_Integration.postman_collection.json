{
  "info": {
    "_postman_id": "fahm-encompass-integration-2025",
    "name": "FAHM Encompass Integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Test suite for Encompass LOS integration endpoints."
  },
  "item": [
    {
      "name": "Login (Get JWT)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"your_password\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/v1/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "v1", "auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "Sync Loan from Encompass",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "url": {
          "raw": "http://localhost:4000/api/v1/encompass/loans/{{loanId}}/sync",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "v1", "encompass", "loans", "{{loanId}}", "sync"]
        }
      },
      "response": []
    },
    {
      "name": "Get Loan Contacts",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "url": {
          "raw": "http://localhost:4000/api/v1/encompass/loans/{{loanId}}/contacts",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "v1", "encompass", "loans", "{{loanId}}", "contacts"]
        }
      },
      "response": []
    },
    {
      "name": "Get Sync History",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "url": {
          "raw": "http://localhost:4000/api/v1/encompass/loans/{{loanId}}/sync-history",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "v1", "encompass", "loans", "{{loanId}}", "sync-history"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "jwt", "value": "" },
    { "key": "loanId", "value": "507f191e810c19729de860ea" }
  ]
}
